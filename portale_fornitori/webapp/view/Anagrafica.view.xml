<mvc:View controllerName="portalefornitori.portalefornitori.controller.Anagrafica"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    height="100%"
    displayBlock="true">
    <f:DynamicPage showFooter="true"
        busy="{master>/options/busy}"
        busyIndicatorDelay="0"
        preserveHeaderStateOnScroll="false"
        toggleHeaderOnTitleClick="true"
        >
        <f:header>
            <core:Fragment fragmentName="portalefornitori.portalefornitori.view.fragment.anagrafica.Header"
            type="XML" />           
        </f:header>
        
        <f:content>
            <core:Fragment fragmentName="portalefornitori.portalefornitori.view.fragment.anagrafica.form"
            type="XML" />
        </f:content>
        <f:footer>
            <OverflowToolbar    
            visible="{= ${userModel>/tipoUtente} === 'Interno' ? true : false }"         
            >
                <Button                    
                    icon="sap-icon://nav-back"                    
                    text="{i18n>back}"                  
                    type="Emphasized"
                    press="navToRicerca" 
                >                   
                </Button>
            </OverflowToolbar>
        </f:footer>
    </f:DynamicPage>
</mvc:View>